<h1 class="text-center mt-3 card p-4"> Welcome to MessageMe - Log in or Sign up to get started </h1>

<div class="card mt-3 p-4">
  <div class="row g-0">
    <div class="col-md-6 d-flex flex-column align-items-center" style="border-right: 1px solid rgba(0, 0, 0, 0.1);">
      <!-- Login Form -->
        <div class="card-body w-50">
            <%= form_for(:session, url: login_path, html: { class: "text-center", 'data-turbo': 'false' }) do |form| %>
                <div class="mb-3">
                <%= form.label :username, class: 'form-label fw-bold' %>
                <%= form.text_field :username, id: 'loginEmail', class: 'form-control', placeholder: 'Enter username' %>
                </div>
                <div class="mb-3">
                <%= form.label :password, class: 'form-label fw-bold' %>
                <%= form.password_field :password, id: 'loginPassword', class: 'form-control', placeholder: 'Password' %>
                </div>
                <%= form.button 'Login', class: 'btn btn-primary' %>
            <% end %>
        </div>
    </div>
    <div class="col-md-6 d-flex align-items-center justify-content-center">
      <!-- Signup Button -->
      <button type="button" class="btn btn-primary btn-lg">Sign Up</button>
    </div>
  </div>
</div>
